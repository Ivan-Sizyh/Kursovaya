<h1 class="mt-5">Таблица библиотек:</h1>

<% if @libraries.empty? %>
  <h1 class="mt-5">Библиотек не создано!</h1>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Название</th>
      </tr>
    </thead>
    <tbody>
      <%= render @libraries %>
    </tbody>
  </table>
<% end %>  

 <%= link_to "Назад", root_path, class: "btn btn-primary mt-5" %>