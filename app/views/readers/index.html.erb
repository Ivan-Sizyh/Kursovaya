<h1 class="mt-5">Таблица читателей:</h1>

<% if @readers.empty? %>
  <h1 class="mt-5">Читателей не создано!</h1>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Имя</th>
        <th scope="col">Фамилия</th>
        <th scope="col">Отчество</th>
        <th scope="col">Домашний адрес</th>
        <th scope="col">Домашний телефон</th>
        <th scope="col">Рабочий телефон</th>
      </tr>
    </thead>
    <tbody>
      <%= render @readers %>
    </tbody>
  </table>
<% end %>  

 <%= link_to "Назад", root_path, class: "btn btn-primary mt-5" %>