<h1 class="mt-5 mb-5">Таблица актуальных выдач книг:</h1>

<%= link_to "Создать новую выдачу книги", new_book_issue_path, class: 'btn btn-primary mb-3' %>

<% if @book_not_returns.empty? %>
  <h1 class="mt-5">Нет актуальных выдач!</h1>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Дата выдачи</th>
        <th scope="col">Дата возврата</th>
        <th scope="col">Книжная карточка</th>
        <th scope="col">Действия</th>
      </tr>
    </thead>
    <tbody>
      <%= render @book_not_returns %>
    </tbody>
  </table>
<% end %>  

 <%= link_to "Назад", books_path, class: "btn btn-primary mt-5" %>